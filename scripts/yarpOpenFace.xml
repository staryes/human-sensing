<application>
    <name>Face Detection Application</name>

    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /facelankmarks</parameters>
    </module>

    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /gaze_vector</parameters>
    </module>

    
    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /righteye</parameters>
    </module>

    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /lefteye</parameters>
    </module>

    <module>
      <name>yarpdev</name>
      <node>localhost</node>
      <parameters>--device opencv_grabber --width 640 --height 480</parameters>
    </module>

    <connection>
        <from>/grabber</from>
        <to>/yarpOpenFace/image:i</to>
        <protocol>fast_tcp</protocol>
    </connection>

    <connection>
      <from>/yarpOpenFace/image:o</from>
      <to>/gaze_vector</to>
      <protocol>fast_tcp</protocol>
    </connection>

    <connection>
      <from>/yarpOpenFace/imgfacelandmarks:o</from>
      <to>/facelankmarks</to>
      <protocol>fast_tcp</protocol>
    </connection>

    
    <connection>
    <from>/yarpOpenFace/image:righteye</from>
    <to>/righteye</to>
    <protocol>fast_tcp</protocol>
    </connection>

    <connection>
    <from>/yarpOpenFace/image:lefteye</from>
    <to>/lefteye</to>
    <protocol>fast_tcp</protocol>
    </connection>


</application>
